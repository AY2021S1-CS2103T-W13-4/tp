<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Line?>
<ListView xmlns:fx="http://javafx.com/fxml/1" fx:id="modulePanel" xmlns="http://javafx.com/javafx/8">
    <VBox>
        <padding>
            <Insets top="1" right="5" bottom="1" left="15"/>
        </padding>
        <HBox spacing="10" id="moduleHeader" fx:id="moduleHeader">
            <Circle fx:id="moduleCircle" radius="9"/>
            <Label fx:id="moduleName" text="\$header" styleClass="module_big_label"/>
        </HBox>
        <Line endX="500" style="-fx-stroke: #8C8C89"/>
        <StackPane fx:id="lessonListPanelPlaceholder" styleClass="pane-with-border">
            <padding>
                <Insets bottom="10"/>
            </padding>
        </StackPane>
        <Label fx:id="taskHeader" text="Tasks" styleClass="date_label"/>
        <Line endX="500" style="-fx-stroke: #8C8C89"/>

        <StackPane fx:id="taskListPanelPlaceholder" styleClass="pane-with-border" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="10"/>
            </padding>
        </StackPane>
        <Label fx:id="contactHeader" text="Contacts" styleClass="date_label"/>
        <Line endX="500" style="-fx-stroke: #8C8C89"/>
        <StackPane fx:id="contactListPanelPlaceholder" styleClass="pane-with-border" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="10"/>
            </padding>
        </StackPane>
    </VBox>
</ListView>
